<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="FilmsUi.FilmsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FilmsUi"
    xmlns:localData="using:FilmsUi.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <ListView x:ConnectionId='2' x:Name="FilmsListView" Grid.Row="0">
            <ListView.ItemTemplate>
                <DataTemplate                                >
                    <StackPanel>
                        <TextBlock Text="{Binding Title}"/>
                        <Button x:ConnectionId='9' Content="Delete"                            Tag="{Binding Id}"/>
                        <Button x:ConnectionId='10' Content="Edit"                          Tag="{Binding Id}"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Grid.Row="1">
            <Button x:ConnectionId='3' Content="←"                          HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,10,0,10"  Width="100" Height="44" FontSize="27"/>
            <TextBlock Text="sorteer/filter"/>
            <Button x:ConnectionId='4' Content="Naam"                         />
            <Button x:ConnectionId='5' Content="Datum"                         />
            <Button x:ConnectionId='6' Content="Rating"                           />
        </StackPanel>
        
    </Grid>
</Window>

